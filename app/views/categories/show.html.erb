<%= render "shared/nav" %>

<div class="max-w-3xl flex flex-col justify-center text-center mx-auto mt-8 rounded bg-gradient-to-r from-blue-400 to-transparent relative eli-form-box-shadow">
  <div class="flex flex-col items-center">

    <%= link_to new_category_task_path(@category) do %>
      <div class="absolute top-4 right-6 bg-yellow-300 hover:bg-yellow-400 font-medium py-2 px-3 rounded">

        <div class="flex justify-between items-center">
          <%= image_tag("png/plus.png", class:"w-3 h-3")%>
          <p class="pl-2">Add Task</p>
        </div>

      </div>
    <% end %>

    <h1 class="text-5xl text-gray-100 font-bold mt-16"><%= @category.title %></h1>
    <em class="text-2xl font-light mb-10"> <%= truncate(strip_tags(@category.description.to_s), length: 60) %>
</em>

  </div>

  <% if @category.tasks.count == 0 %>

    <div class="flex justify-center mt-1 rounded">
      <h1>NO TASK YET UNDER THIS AGENDA!</h1>
    </div>

  <% else %>

    <div class="grid grid-cols-8 w-full mb-1">
      <% @category.tasks.each do |task| %>
        <div class="flex justify-around items-center col-span-1 border border-l-0">
          <h1>CBox</h1>
        </div>

        <div class="flex justify-around items-center col-span-6 border">
          <div class="flex flex-col">
            <span class="text-2xl font-bold text-gray-200">
              <%= task.title %>
            </span>

            <em class="flex justify-around text-center">
              <%= truncate(strip_tags(task.description.to_s), length: 50) %>
            </em>
          </div>

          <%= task.deadline %>
        </div>

        <div class="flex justify-around items-center col-span-1 border border-r-0">
          <%= link_to image_tag("png/edit.png", class:"w-7"), edit_category_task_path(@category, task) %>
          <%= link_to image_tag("png/delete.png", class:"w-7"), category_task_path(@category, task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>
        </div>
      <% end %>
    </div>
  <% end %>

</div>

