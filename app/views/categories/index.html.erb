<%= render "shared/nav" %>
<br>


<% if @categories.count == 0 %>

  <div class="flex justify-center">
    <%= image_tag("to-do-list-animate.svg", class:"w-1/3") %>
  </div>

  <div class="flex justify-center text-3xl space-x-5">
    <h1>No Agendas yet. </h1>
    <%= link_to 'Create one now!', new_category_path, class: "text-pink-300 hover:text-pink-600"%>
  </div>

<% else %>
  <div class="flex">
    <% @categories.each do |category| %>
      <%= link_to category_tasks_path(category) do %>
        <div class="w-1/4 mx-auto flex-col space-y-3 p-6 bg-gray-200 rounded-lg shadow-xl text-black">

        <%= link_to 'Update', edit_category_path(category) %>
        <%= link_to 'Delete', category_path(category), method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %>

          <div class="text-4xl font-bold"><%= category.title %></div>
          <div class="text-xl font-bold"><%= category.description %></div>
        </div>
      <% end %>
    <% end %>
  </div>

<% end %>

